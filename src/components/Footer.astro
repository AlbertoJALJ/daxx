<style>
	footer {
		padding: 3em 1em 4em 1em;
		background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
		color: #e0e0e0;
		text-align: center;
		border-top: 3px solid var(--accent);
		position: relative;
	}
	
	footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 3px;
		background: linear-gradient(90deg, 
			var(--accent) 0%, 
			rgb(var(--water-blue)) 33%, 
			rgb(var(--flame-orange)) 66%, 
			rgb(var(--thunder-yellow)) 100%);
	}
	
	.footer-content {
		max-width: 720px;
		margin: 0 auto;
	}
	
	.breathing-styles {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-bottom: 2em;
		flex-wrap: wrap;
	}
	
	.style-badge {
		padding: 0.5em 1em;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 20px;
		border: 2px solid rgba(200, 16, 46, 0.3);
		font-size: 0.9em;
		font-weight: 600;
		transition: all 0.3s ease;
	}
	
	.style-badge:hover {
		background: rgba(200, 16, 46, 0.2);
		border-color: var(--accent);
		transform: translateY(-2px);
	}
	
	.copyright {
		font-size: 1em;
		margin: 1em 0;
		font-weight: 600;
	}
	
	.japanese {
		display: inline-block;
		margin-left: 0.5em;
		color: var(--accent);
		font-size: 1.1em;
	}
	
	.tagline {
		font-style: italic;
		color: #a0a0a0;
		margin: 1.5em 0;
		font-size: 0.95em;
		max-width: 500px;
		margin-left: auto;
		margin-right: auto;
	}
	
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 2em;
	}
	
	.social-links a {
		text-decoration: none;
		color: #e0e0e0;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.5em;
	}
	
	.social-links a:hover {
		color: var(--accent);
		transform: scale(1.1);
	}
	
	@media (max-width: 720px) {
		.breathing-styles {
			gap: 0.5em;
		}
		
		.style-badge {
			font-size: 0.8em;
			padding: 0.4em 0.8em;
		}
	}
</style>
