<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: linear-gradient(135deg, #ffffff 0%, #fef5f5 100%);
		box-shadow: 0 4px 12px rgba(200, 16, 46, 0.15);
		border-bottom: 3px solid var(--accent);
		position: relative;
	}
	
	header::after {
		content: '';
		position: absolute;
		bottom: -3px;
		left: 0;
		width: 100%;
		height: 3px;
		background: linear-gradient(90deg, 
			var(--accent) 0%, 
			rgb(var(--water-blue)) 33%, 
			rgb(var(--flame-orange)) 66%, 
			rgb(var(--thunder-yellow)) 100%);
	}
	
	h2 {
		margin: 0;
		font-size: 1.2em;
		font-weight: 700;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--accent);
		transition: color 0.3s ease;
	}
	
	h2 a:hover {
		color: var(--accent-dark);
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	
	nav a {
		padding: 1em 0.5em;
		color: rgb(var(--gray-dark));
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: all 0.3s ease;
	}
	
	nav a:hover {
		color: var(--accent);
		border-bottom-color: var(--accent);
	}
	
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
		color: var(--accent);
	}
	
	.social-links {
		display: flex;
		gap: 0.5em;
	}
	
	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.5em;
		border: none;
		transition: transform 0.3s ease, color 0.3s ease;
	}
	
	.social-links a:hover {
		transform: scale(1.1);
		color: var(--accent);
		border-bottom: none;
	}
	
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
		h2 {
			font-size: 1em;
		}
	}
</style>
